{{#section 'js'}}
{{/section}}

<div class="card">
  <h4 class="card-header">
    Chỉnh sửa {{this.category.CatName}}/ {{this.branch.BranchName}}
  </h4>
  <div class="card-body">
    <form id="editBranch" method="POST">
      <div class="form-group">
        <label for="BranchName">Đổi tên chuyên mục con</label>
        <input type="text" class="form-control" id="BranchName" name="BranchName" autofocus value="{{this.branch.BranchName}}">
        <small id="BranchNameHelp" class="form-text text-muted"
          style="color:red !important; font-weight: bold;"></small>
      </div>
      <a class="btn btn-primary" href="/admin/categories/" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Quay trở về
      </a>
      <button type="submit" class="btn btn-danger" formaction="/admin/categories/{{this.category.CatID}}/edit/{{this.branch.BranchID}}/del">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Xoá
      </button>
      <button type="submit" class="btn btn-success" formaction="/admin/categories/{{this.category.CatID}}/edit/{{this.branch.BranchID}}/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Lưu
      </button>
    </form>
  </div>
</div>